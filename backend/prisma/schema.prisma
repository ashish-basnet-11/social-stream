// prisma/schema.prisma

generator client {
  provider   = "prisma-client-js"
  engineType = "library" // Good for Node.js environments
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL") // <--- REQUIRED for Prisma 6.x
}

// 1. User Model
model User {
  id       Int       @id @default(autoincrement())
  email    String    @unique
  password String
  name     String
  // Relationship fields:
  posts    Post[]
  comments Comment[]
  likes    Like[]
}

// 2. Post Model
model Post {
  id        Int      @id @default(autoincrement())
  title     String
  content   String?  @db.Text
  published Boolean  @default(true)
  createdAt DateTime @default(now())

  // Relationship fields:
  author   User      @relation(fields: [authorId], references: [id])
  authorId Int
  comments Comment[]
  likes    Like[]
}

// 3. Comment Model (One-to-Many)
// Comment Model
model Comment {
  id        Int      @id @default(autoincrement())
  content   String   @db.Text
  createdAt DateTime @default(now())

  // Foreign Keys with CASCADE
  author   User @relation(fields: [authorId], references: [id], onDelete: Cascade)
  authorId Int
  post     Post @relation(fields: [postId], references: [id], onDelete: Cascade)
  postId   Int
}

// Like Model
model Like {
  createdAt DateTime @default(now())

  userId Int
  postId Int

  // Foreign Keys with CASCADE
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  post Post @relation(fields: [postId], references: [id], onDelete: Cascade)

  @@id([userId, postId])
}
